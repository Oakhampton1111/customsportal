# Customs Broker Portal - Development Environment
# ================================================

# Application Settings
APP_NAME="Customs Broker Portal API"
APP_VERSION="1.0.0"
DEBUG=true
ENVIRONMENT=development
HOST=0.0.0.0
PORT=8000
RELOAD=true

# Database Configuration - SQLite for Development
DATABASE_URL=sqlite+aiosqlite:///./customs_portal.db
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=30
DATABASE_POOL_TIMEOUT=30
DATABASE_POOL_RECYCLE=3600

# Security Settings
SECRET_KEY=dev-secret-key-change-in-production-use-openssl-rand-hex-32
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS Settings
CORS_ORIGINS=["http://localhost:3000","http://localhost:5173","http://127.0.0.1:3000","http://127.0.0.1:5173"]

# Logging Settings
LOG_LEVEL=INFO
LOG_FORMAT=console

# Rate Limiting
RATE_LIMIT_REQUESTS=100

# External APIs (for future integration)
# CLAUDE_API_KEY=your_claude_api_key_here
# OCR_SERVICE_URL=https://api.ocr.space/parse/image
